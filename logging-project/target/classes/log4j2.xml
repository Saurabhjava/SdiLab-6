<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="myconsole">
			<PatternLayout pattern="%d{dd:MMM:yyyy:HH:mm:ss} -%p -%m%n"/>
		</Console>
		<File name="MAIN" fileName="logs/main.log">
			<PatternLayout pattern="%d{dd:MMM:yyyy:HH:mm:ss} -%p -%m%n"/>
		</File>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="myconsole"/>
			<AppenderRef ref="MAIN"/>
		</Root>
	</Loggers>
</Configuration>